#MongoDB Docker Compose File
version: '3.7'
services:
  mongodb:
    image: mongo:latest

#Optional you can secure your mongo by following environment variables

#    environment:
#      MONGO_INITDB_ROOT_USERNAME: root
#      MONGO_INITDB_ROOT_PASSWORD: rootpassword
    ports:
      - 27017:27017
    volumes:
      - '/var/lib/mongodb:/data/db'
